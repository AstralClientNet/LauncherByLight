                    <TextBlock VerticalAlignment="Center" Margin="260,337,255,94" FontSize="18" FontFamily="SansSerif" Foreground="White" Height="24" TextAlignment="Center" FontWeight="Bold" Text="MINECRAFT VERSION"/>
                    <Label x:Name="mcVersionAboutUs" Content="" VerticalAlignment="Center" Margin="287,361,214,21" FontSize="36" FontFamily="SansSerif" Foreground="#FFB0AFAF" Height="73" FontStyle="Italic" />


                </Grid>
            </Grid>
